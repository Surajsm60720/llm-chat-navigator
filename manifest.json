{
  "manifest_version": 3,
  "name": "LLM Chat Navigator",
  "version": "1.2.1",
  "description": "Navigate your LLM conversations with a table of contents for your prompts. Supports ChatGPT, Gemini, Claude, and more.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "LLM Chat Navigator"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content_script.js"],
      "css": ["content_styles.css"],
      "run_at": "document_idle"
    }
  ]
}
